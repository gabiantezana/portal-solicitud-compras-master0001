@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="center-block w-xxl w-auto-xs p-y-md">
    <div class="navbar"></div>
    <div class="p-a-md box-color r box-shadow-z1 text-color m-a">
        <div class="m-b">
            Iniciar sesión
        </div>
        @using (Html.BeginForm("IniciarSesion", "Autentificacion", FormMethod.Post, new { id = "frmLogin", ui_jp = "parsley" }))
        {
            <div class="md-form-group float-label">
                <input type="text" class="md-input" name="usuarioWeb" autofocus required>
                <label>Usuario</label>
            </div>
            <div class="md-form-group float-label">
                <input type="password" class="md-input" name="password" required>
                <label>Contraseña</label>
            </div>
            <div class="m-b-md"></div>
            <button type="submit" class="btn primary btn-block p-x-md" style="cursor:pointer;" id="btnSubmitLogin">Ingresar</button>
        }
        <div class="p-v-lg text-center">
            <div class="m-b-md"></div>
            <div class="m-b">
                <a ui-sref="access.forgot-password" href="@Url.Action("Forgot", "Autentificacion")" class="text-primary _600">Olvidaste tu contraseña?</a>
            </div>
        </div>
    </div>
</div>